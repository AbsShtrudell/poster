<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="round_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/post_corners_radius</item>
    </style>

    <style name="singleLine_textView">
        <item name="android:textAppearance">@style/text</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="post_text_view" parent="singleLine_textView">
        <item name="android:maxLines">3</item>
        <item name="singleLine">false</item>
    </style>

    <style name="post_header_view" parent="singleLine_textView">
        <item name="android:textAppearance">@style/text.header</item>
    </style>

    <style name="post_linear_layout">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/linear_layout_divider</item>
    </style>

    <style name="player_button">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

    <style name="text" parent="">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.header">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="text_hint" parent="text">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="text_header_hint" parent="text.header">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>