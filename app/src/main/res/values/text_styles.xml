<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_base">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="text_hint_base">
        <item name="android:textColor">?attr/hintTextColor</item>
    </style>

    <style name="text" parent="text_base">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="text_header" parent="text_base">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="text.hint" parent="text_hint_base"/>

    <style name="text_header.hint" parent="text_hint_base"/>
</resources>