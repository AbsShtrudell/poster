<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Poster" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/light_grey</item>
        <item name="containerColor">@color/white</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="textColor">@color/black</item>
        <item name="cardBackground">@drawable/round_square</item>
    </style>

    <style name="Theme.Poster.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Poster.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Poster.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>